<h1>Listing agendas</h1>

<table>
  <tr>
    <th>Date</th>
    <th>Doctor</th>
    <th>Attendant</th>
    <th>Patient</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @agendas.each do |agenda| %>
  <tr>
    <td><%= agenda.date.name %></td>
    <td><%= agenda.doctor.name %></td>
    <td><%= agenda.attendant.name %></td>
    <td><%= agenda.patient %></td>
    <td><%= link_to 'Show', agenda %></td>
    <td><%= link_to 'Edit', edit_agenda_path(agenda) %></td>
    <td><%= link_to 'Destroy', agenda, method: :delete, data: { confirm: 'Are you sure?' } %></td>
  </tr>
<% end %>
</table>

<br />

