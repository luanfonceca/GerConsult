<%= simple_form_for @agenda, :html => { :class => 'form-horizontal' } do |f| %>
  <%= f.input :date %>
  <%= f.input :crm %>
  <%= f.input :specialty %>
  <div class="form-actions">
    <%= f.button :submit, :class => 'btn btn-primary' %>
    <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
                agendas_path, :class => 'btn' %>
  </div>
<% end %>
