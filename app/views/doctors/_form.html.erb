<%= simple_form_for @doctor, :html => { :class => 'form-horizontal' } do |f| %>
  <%= f.input :crm %>
  <%= f.input :specialty %>
  <div class="form-actions">
    <%= f.button :submit, :class => 'btn-primary' %>
    <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
                doctors_path, :class => 'btn' %>
  </div>
<% end %>
